/* pages/typelist/typelist.wxss */

page {
  background: #fafaf8;
}

.img {
  width: 100%;
  height: 320rpx;
}

.search {
  width: 100%;
  height: 80rpx;
  /* background: rgb(244,96,56); */
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 30rpx;
}

.search_view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 70%;
  height: 70rpx;
  /* border: 1px solid  #ff0; */
  border-radius: 40rpx;
  background: #fff;
}

.search input {
  width: 82%;
  height: 72rpx;
  /* border: 1px solid  #ccc; */
}

.search text {
  color: #f00;
  margin-left:10rpx;
}

.hot-recipe {
  position: relative;
  background: #fff;
  margin-top: 10rpx;
}

/* 分类列表 */
.typelist {
  padding: 20rpx;
  border-radius: 20rpx;
}