/* pages/search/search.wxss */
page{
  background: #fafaf8;
}
.search{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border-bottom: 1px solid #FFA000; */
}
.search_view{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 70%;
  height: 80rpx;
  border: 1px solid  #ccc;
  border-radius: 40rpx; 
}
.search input{
  width: 82%;
  height: 76rpx;
}

.search  text{
  color: #868686;
}


/* 热门搜索 */
.hotsearch{
  padding: 30rpx 20rpx;
}

.hotsearch_list{
  margin-top: 20rpx;
}
.hotsearch_list view{
  width: 32.5%;
  height: 96rpx;
  /* border: 1px solid red; */
  background: #fff;
  float: left;
  text-align: center;
  line-height: 96rpx;
  margin: 2rpx;
  color: #aaa;
  font-size: 26rpx;
}


/* 近期搜索 */
.jqsearch{
  clear: both;
  padding: 50rpx 20rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
}

.jqsearch_list{
  margin-top: 20rpx;
  
}
.jqsearch_list view{
  width: 32.5%;
  height: 96rpx;
  /* border: 1px solid red; */
  background: #fff;
  float: left;
  text-align: center;
  line-height: 96rpx;
  margin: 2rpx;
  color: #aaa;
}